<!-- osd items allow to position display and control items directly on top of the map: -->

<!-- http://wiki.navit-project.org/index.php/OSD_Layouts -->

<!-- WITH speed-warner and WITH speed-display -->
<osd enabled="yes" type="image" x="0" y="32" w="106" h="106" src="$NAVIT_SHAREDIR/xpm/PreNav/head_w_speed_bg.png" /> 
<osd enabled="yes" type="text" label="${vehicle.position_speed}" x="0" y="32" w="82" h="30" background_color="#00000000" align="8" font_size="300"/>
<osd enabled="yes" type="speed_warner" x="2" y="65" w="47" h="47" background_color="#00000000" font_size="300" speed_exceed_limit_offset="10" speed_exceed_limit_percent="10" announce_on="0" label="images:$NAVIT_SHAREDIR/xpm/PreNav/speed_red.png:$NAVIT_SHAREDIR/xpm/PreNav/speed_green.png:$NAVIT_SHAREDIR/xpm/PreNav/speed_grey.png:" />
